{
	"info": {
		"_postman_id": "reward-api-collection",
		"name": "Reward API Collection",
		"description": "Collection for testing Reward API endpoints with JWT authentication",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},

	"event": [
		{
			"listen": "prerequest",
			"script": {
				"exec": [
					"// Set base URL",
					"pm.environment.set('base_url', 'http://localhost:3000');"
				],
				"type": "text/javascript"
			}
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Login successful', function () {",
									"    pm.response.to.have.status(200);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.success).to.be.true;",
									"    pm.expect(responseJson.token).to.exist;",
									"    pm.environment.set('jwt_token', responseJson.token);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						}
					}
				}
			]
		},
		{
			"name": "Reward Endpoints",
			"item": [
				{
					"name": "Get Customer Rewards",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Get rewards successful', function () {",
									"    pm.response.to.have.status(200);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.success).to.be.true;",
									"    pm.expect(responseJson.data).to.exist;",
									"    pm.expect(responseJson.data.rewards).to.be.an('array');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-customer-id",
								"value": "1"
							},
							{
								"key": "x-customer-email",
								"value": "test@example.com"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/rewards?page=1&limit=10",
							"host": ["{{base_url}}"],
							"path": ["api", "rewards"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "limit",
									"value": "10"
								}
							]
						}
					}
				},
				{
					"name": "Get Total Reward Points",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Get total points successful', function () {",
									"    pm.response.to.have.status(200);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.success).to.be.true;",
									"    pm.expect(responseJson.data).to.exist;",
									"    pm.expect(responseJson.data.total_points).to.exist;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-customer-id",
								"value": "1"
							},
							{
								"key": "x-customer-email",
								"value": "test@example.com"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/rewards/total",
							"host": ["{{base_url}}"],
							"path": ["api", "rewards", "total"]
						}
					}
				},
				{
					"name": "Get Reward Stats",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Get reward stats successful', function () {",
									"    pm.response.to.have.status(200);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.success).to.be.true;",
									"    pm.expect(responseJson.data).to.exist;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "x-customer-id",
								"value": "1"
							},
							{
								"key": "x-customer-email",
								"value": "test@example.com"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/rewards/stats",
							"host": ["{{base_url}}"],
							"path": ["api", "rewards", "stats"]
						}
					}
				},
				{
					"name": "Add Reward Points",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Add reward points successful', function () {",
									"    pm.response.to.have.status(201);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.success).to.be.true;",
									"    pm.expect(responseJson.data).to.exist;",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "x-customer-id",
								"value": "1"
							},
							{
								"key": "x-customer-email",
								"value": "test@example.com"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"description\": \"Test reward points\",\n    \"points\": 100,\n    \"order_id\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/rewards",
							"host": ["{{base_url}}"],
							"path": ["api", "rewards"]
						}
					}
				}
			]
		},
		{
			"name": "Authentication Error Tests",
			"item": [
				{
					"name": "No Auth - Get Rewards",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('No auth returns 401', function () {",
									"    pm.response.to.have.status(401);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.message).to.include('authorized');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/rewards",
							"host": ["{{base_url}}"],
							"path": ["api", "rewards"]
						}
					}
				},
				{
					"name": "Invalid Token - Get Rewards",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Invalid token returns 401', function () {",
									"    pm.response.to.have.status(401);",
									"    const responseJson = pm.response.json();",
									"    pm.expect(responseJson.message).to.include('authorized');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer invalid_token_here"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/rewards",
							"host": ["{{base_url}}"],
							"path": ["api", "rewards"]
						}
					}
				}
			]
		}
	]
}