{
  "info": {
    "name": "Ticket System API",
    "description": "Complete API collection for testing the ticket management system with customer and admin endpoints",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "ticket_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Customer Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.token) {",
                  "        pm.environment.set('auth_token', response.token);",
                  "        console.log('Customer Token saved:', response.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as customer to get authentication token"
          },
          "response": []
        },
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.token) {",
                  "        pm.environment.set('auth_token', response.token);",
                  "        console.log('Admin Token saved:', response.token);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            },
            "description": "Login as admin to get authentication token for admin endpoints"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Customer Endpoints",
      "item": [
        {
          "name": "Get Ticket Categories",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/categories",
              "host": ["{{base_url}}"],
              "path": ["tickets", "categories"]
            },
            "description": "Get all available ticket categories"
          },
          "response": []
        },
        {
          "name": "Create Ticket",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.success && response.data && response.data.ticket_id) {",
                  "        pm.environment.set('ticket_id', response.data.ticket_id);",
                  "        console.log('Ticket ID saved:', response.data.ticket_id);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subject\": \"Order Issue - Damaged Product\",\n  \"category_id\": 2,\n  \"message\": \"I received a damaged product in my recent order. The item appears to have been damaged during shipping. Please help me with a replacement or refund.\",\n  \"priority\": \"high\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets",
              "host": ["{{base_url}}"],
              "path": ["tickets"]
            },
            "description": "Create a new support ticket"
          },
          "response": []
        },
        {
          "name": "Get Customer Tickets",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets?status=all&page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["tickets"],
              "query": [
                {
                  "key": "status",
                  "value": "all",
                  "description": "Filter by status: all, open, pending, closed"
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Get all tickets for the authenticated customer"
          },
          "response": []
        },
        {
          "name": "Get Ticket by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}"]
            },
            "description": "Get detailed information about a specific ticket"
          },
          "response": []
        },
        {
          "name": "Add Customer Reply",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Thank you for your quick response. I have attached photos of the damaged item. Please let me know the next steps for getting a replacement.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}/reply",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}", "reply"]
            },
            "description": "Add a reply to an existing ticket"
          },
          "response": []
        },
        {
          "name": "Upload File with Reply",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "message",
                  "value": "Here are the photos of the damaged product as requested.",
                  "type": "text"
                },
                {
                  "key": "attachment",
                  "type": "file",
                  "src": "",
                  "description": "Upload an image or document"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/tickets/{{ticket_id}}/reply",
              "host": ["{{base_url}}"],
              "path": ["tickets", "{{ticket_id}}", "reply"]
            },
            "description": "Add a reply with file attachment"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Get All Tickets (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/tickets?status=all&page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["admin", "tickets"],
              "query": [
                {
                  "key": "status",
                  "value": "all",
                  "description": "Filter by status: all, open, pending, closed"
                },
                {
                  "key": "customer_id",
                  "value": "",
                  "description": "Filter by specific customer ID",
                  "disabled": true
                },
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            },
            "description": "Admin view of all tickets with customer information"
          },
          "response": []
        },
        {
          "name": "Get Ticket Details (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/admin/tickets/{{ticket_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "tickets", "{{ticket_id}}"]
            },
            "description": "Admin view of ticket details with all replies"
          },
          "response": []
        },
        {
          "name": "Add Admin Reply",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Thank you for contacting us. We have reviewed your case and will process a replacement for the damaged item within 2-3 business days. You will receive a tracking number via email once the replacement is shipped.\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/tickets/{{ticket_id}}/reply",
              "host": ["{{base_url}}"],
              "path": ["admin", "tickets", "{{ticket_id}}", "reply"]
            },
            "description": "Admin adds a reply to customer ticket"
          },
          "response": []
        },
        {
          "name": "Admin Reply with Attachment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "message",
                  "value": "Please find the return shipping label attached. Use this to send back the damaged item.",
                  "type": "text"
                },
                {
                  "key": "attachment",
                  "type": "file",
                  "src": "",
                  "description": "Upload return label or other documents"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/admin/tickets/{{ticket_id}}/reply",
              "host": ["{{base_url}}"],
              "path": ["admin", "tickets", "{{ticket_id}}", "reply"]
            },
            "description": "Admin reply with file attachment"
          },
          "response": []
        },
        {
          "name": "Update Ticket Status",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"closed\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/tickets/{{ticket_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["admin", "tickets", "{{ticket_id}}", "status"]
            },
            "description": "Update ticket status (open, pending, closed)"
          },
          "response": []
        },
        {
          "name": "Update Ticket Details",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{auth_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"subject\": \"Updated: Order Issue - Damaged Product\",\n  \"category_id\": \"2\",\n  \"priority\": \"medium\",\n  \"status\": \"pending\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/tickets/{{ticket_id}}",
              "host": ["{{base_url}}"],
              "path": ["admin", "tickets", "{{ticket_id}}"]
            },
            "description": "Update ticket subject, category, priority, or status"
          },
          "response": []
        }
      ]
    }
  ]
}